
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layoutuser.cshtml";
}
@*@model IEnumerable<WebsiteQuanAo.Models.SanPham>*@
@using WebsiteQuanAo.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<SanPham>
@{
    Html.RenderPartial("_SlidePartial");
}
<head>
    <style>

        .navbar .fas {
            margin: 0px 13px 0px 5px;
        }
        .page-item {
            padding: 5px 10px;
            border: 1px solid #d5d4eb;
            border-radius: 2px;
            
        }
            .page-item a {
                text-decoration: none;
                color: #7d7388;
            }
            .pagination {
                justify-content: center;
            }

        ul li:last-child {
            border: 1px solid #d5d4eb;
        }
    </style>
</head>
<div class="container product text-center" style="width: 1000px; margin-bottom: 40px;">
    <h2 class="p-5">SẢN PHẨM MỚI</h2>

    @Html.Action("NewProduct", "Clothes")

    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("Home", new { page = page }),
      new PagedListRenderOptions
      {
          //thiết lập class cho thẻ li
          LiElementClasses = new[] { "page-item" }

          })
    </div> 
    Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount

    <h1 class="text-center">@*<button type="button" class="btn btn-secondary">XEM THÊM SẢN PHẨM</button>*@</h1>

    <div class="container product">
        <h2 class="p-3">BEST SELLERS</h2>

        @Html.Action("BestSellers", "Clothes")

    </div>
</div>

