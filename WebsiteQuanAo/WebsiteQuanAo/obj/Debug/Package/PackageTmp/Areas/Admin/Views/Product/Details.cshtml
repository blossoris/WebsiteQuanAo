@model WebsiteQuanAo.Models.SanPham

@{
	ViewBag.Title = "Quản lý sản phẩm";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>CHI TIẾT SẢN PHẨM</h4>
<style type="text/css">
	img {
		width: 200px;
	}

	.dl-horizontal dt {
		font-weight: bold;
		height:0px;
	}

	.dl-horizontal dd {
		margin-left: 200px;
	}

</style>

<div>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			Tên sản phẩm:
		</dt>
		<dd>
			@Html.DisplayFor(model => model.TenSP)
		</dd>
		<dt>
			Loại:
		</dt>
		<dd>
			@Html.DisplayFor(model => model.LoaiSP.TenLoai)
		</dd>
		<dt>
			Danh mục:
		</dt>
		<dd>
			@Html.DisplayFor(model => model.DanhMuc.TenDM)
		</dd>
		<dt>
			Kích cỡ:
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Size)
		</dd>
		<dt>
			Mô tả:
		</dt>
		<dd>
			@Html.Raw(@Model.Mota.ToString().Replace("\n", "</p><p>&nbsp&nbsp&nbsp&nbsp&nbsp"))
		</dd>
		<dt>
			Ảnh:
		</dt>
		<dd>
			<img src="~/Images/@Model.AnhBia" alt=" @Model.TenSP">
		</dd>
		<dt>
			Màu:
		</dt>
		<dd>
			@Html.DisplayFor(model => model.Color.nameColor)
		</dd>
		<dt>
			Giá:
		</dt>
		<dd>
			@Html.FormatValue(@Model.GiaSP, "{0:#,##0}") VNĐ
		</dd>
		<dt>
			Ngày nhập:
		</dt>
		<dd>
			@Html.FormatValue(@Model.NgayNhap, "{0:dd/MM/yyyy}")
		</dd>
		<dt>
			Số lượng bán:
		</dt>
		<dd>
			@Html.DisplayFor(model => model.SoLuongBan)
		</dd>
		<dt>
			Số lượng tồn:
		</dt>
		<dd>
			@Html.DisplayFor(model => model.SoLuongTon)
		</dd>
	</dl>
</div>
<p>
	@Html.ActionLink("Edit", "Edit", new { id = Model.MaSP }) |
	@Html.ActionLink("VỀ TRANG QUẢN LÝ SẢN PHẨM", "Index")
</p>
