@model WebsiteQuanAo.Models.Color

@{
	ViewBag.Title = "Quản lý màu sắc";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
	.form-horizontal {
		margin: 20px;
	}

	.control-label {
		font-weight: bold;
	}

	.form-control {
		width: 100%;
		padding: 5px;
		margin-bottom: 10px;
	}

	.btn {
		background-color: #007BFF;
		color: #fff;
	}

		.btn:hover {
			background-color: #0056b3;
		}

	.text-danger {
		color: red;
	}
</style>
<h4>Chỉnh sửa màu</h4>


@using (Html.BeginForm("Edit", "Color", FormMethod.Post, new
{
	@enctype ="multipart/form-data"
}))
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<hr />
		<div class="form-group">
			<label class="control-label col-md-2">Mã màu:</label>
			<div class="col-md-10">
				<input type="text" size="70" name="idColor" value="@Model.idColor" readonly />
			</div>
		</div>
		<div class="form-group">
			<label class="control-label col-md-2">Tên màu:</label>
			<div class="col-md-10">
				<input type="text" size="70" name="nameColor" value="@Model.nameColor" required />
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Lưu" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("VỀ TRANG QUẢN LÝ MÀU", "Index")
</div>
