@model WebsiteQuanAo.Models.LoaiSP

@{
	ViewBag.Title = "Quản lý loại";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
	.form-horizontal {
		margin: 20px;
	}

	.control-label {
		font-weight: bold;
	}

	.form-control {
		width: 100%;
		padding: 5px;
		margin-bottom: 10px;
	}

	.btn {
		background-color: #007BFF;
		color: #fff;
	}

		.btn:hover {
			background-color: #0056b3;
		}

	.text-danger {
		color: red;
	}
</style>
<h4>Chỉnh sửa loại</h4>

@using (Html.BeginForm("Edit", "Type", FormMethod.Post, new
{
	@enctype = "multipart/form-data"
}))
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<hr />
		<div class="form-group">
			<label class="control-label col-md-2">Mã loại:</label>
			<div class="col-md-10">
				<input type="text" size="70" name="MaLoai" value="@Model.MaLoai" readonly />
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-md-2">Tên danh mục:</label>
			<div class="col-md-10">
				<input type="text" size="70" name="TenLoai" value="@Model.TenLoai" required />
			</div>
		</div>

		<div class="form-group">
			<label class="control-label col-md-2">Danh mục:</label>
			<div class="col-md-10">
				@Html.DropDownList("MaDM")
			</div>
		</div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Lưu" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("VỀ TRANG QUẢN LÝ LOẠI", "Index")
</div>
