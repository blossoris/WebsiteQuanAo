@model WebsiteQuanAo.Models.KhachHang

@{
	ViewBag.Title = "Quản lý khách hàng";
	Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>THÔNG TIN KHÁCH HÀNG</h4>
<style type="text/css">
	img {
		width: 200px;
	}

	.dl-horizontal dt {
		font-weight: bold;
		height: 0px;
	}

	.dl-horizontal dd {
		margin-left: 200px;
	}
</style>

<div>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			Họ tên:
		</dt>

		<dd>
			@Html.DisplayFor(model => model.HoTen)
		</dd>

		<dt>
			Giới tính:
		</dt>

		<dd>
			@{
				if (Model.GioiTinh)
				{
					<text>Nữ</text>
				}
				else
				{
					<text>Nam</text>
				}
			}
		</dd>

		<dt>
			Địa chỉ:
		</dt>

		<dd>
			@Html.DisplayFor(model => model.DiaChi)
		</dd>

		<dt>
			Email:
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Email)
		</dd>

		<dt>
			Số điện thoại:
		</dt>

		<dd>
			@Html.DisplayFor(model => model.SDT)
		</dd>

		@if (!string.IsNullOrEmpty(Model.Username))
		{
			<dt>
				Username:
			</dt>
			<dd>
				@Html.DisplayFor(model => model.Username)
			</dd>
		}
	</dl>
</div>
<p>
	@Html.ActionLink("Sửa", "Edit", new { id = Model.MaKH }) |
	@Html.ActionLink("VỀ TRANG QUẢN LÝ KHÁCH HÀNG", "Index")
</p>
