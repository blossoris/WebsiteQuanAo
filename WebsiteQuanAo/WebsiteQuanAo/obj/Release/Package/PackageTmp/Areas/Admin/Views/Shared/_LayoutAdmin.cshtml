<!DOCTYPE html>
<html lang="vi">

<head>
    <title>Admin Noctual Shop</title>
    <meta charset="utf-8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/layoutadmin/assets/img/favicon.ico">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>Light Bootstrap Dashboard - Free Bootstrap 4 Admin Dashboard by Creative Tim</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />
    <!-- CSS Files -->
    <link href="~/layoutadmin/assets/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/layoutadmin/assets/css/light-bootstrap-dashboard.css?v=2.0.0 " rel="stylesheet" />
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="~/layoutadmin/assets/css/demo.css" rel="stylesheet" />
</head>

<body>
    <div class="wrapper">
        <div class="sidebar" data-image="~/layoutadmin/assets/img/sidebar-5.jpg">
            <!--
                Tip 1: You can change the color of the sidebar using: data-color="purple | blue | green | orange | red"

                Tip 2: you can also add an image using data-image tag
            -->
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="javascript:;" class="simple-text">
                        <img src="~/Images/logo.png" width="200" />
                    </a>
                </div>
                <ul class="nav">
                    @if (Session["Username"] != null)
                    {
                        <li class="nav-item @(Request.Url.AbsolutePath.Equals(Url.Action("Index", "Home"), StringComparison.OrdinalIgnoreCase) ? "active" : "")">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">
                                <i class="fa fa-dashboard"></i>
                                <p>Trang chủ</p>
                            </a>
                        </li>
                        <li class="nav-item @(Request.Url.AbsolutePath.Equals(Url.Action("Index", "Product"), StringComparison.OrdinalIgnoreCase) ? "active" : "")">
                            <a class="nav-link" href="@Url.Action("Index", "Product")">
                                <i class="nc-icon nc-satisfied"></i>
                                <p>Sản phẩm</p>
                            </a>
                        </li>
                        <li class="nav-item @(Request.Url.AbsolutePath.Equals(Url.Action("Index", "Color"), StringComparison.OrdinalIgnoreCase) ? "active" : "")">
                            <a class="nav-link" href="@Url.Action("Index", "Color")">
                                <i class="nc-icon nc-palette"></i>
                                <p>Màu sắc</p>
                            </a>
                        </li>
                        <li class="nav-item @(Request.Url.AbsolutePath.Equals(Url.Action("Index", "Customer"), StringComparison.OrdinalIgnoreCase) ? "active" : "")">
                            <a class="nav-link" href="@Url.Action("Index", "Customer")">
                                <i class="nc-icon nc-favourite-28"></i>
                                <p>Khách hàng</p>
                            </a>
                        </li>
                        <li class="nav-item @(Request.Url.AbsolutePath.Equals(Url.Action("Index", "Category"), StringComparison.OrdinalIgnoreCase) ? "active" : "")">
                            <a class="nav-link" href="@Url.Action("Index", "Category")">
                                <i class="nc-icon nc-album-2"></i>
                                <p>Danh mục</p>
                            </a>
                        </li>
                        <li class="nav-item @(Request.Url.AbsolutePath.Equals(Url.Action("Index", "Type"), StringComparison.OrdinalIgnoreCase) ? "active" : "")">
                            <a class="nav-link" href="@Url.Action("Index", "Type")">
                                <i class="nc-icon nc-backpack"></i>
                                <p>Loại</p>
                            </a>
                        </li>
                        <li class="nav-item @(Request.Url.AbsolutePath.Equals(Url.Action("Index", "Bill"), StringComparison.OrdinalIgnoreCase) ? "active" : "")">
                            <a class="nav-link" href="@Url.Action("Index", "Bill")">
                                <i class="nc-icon nc-paper-2"></i>
                                <p>Đơn hàng</p>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">
                                <i class="nc-icon nc-album-2"></i>
                                <p>Trang chủ</p>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg " color-on-scroll="500">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#pablo">@ViewBag.Title</a>
                    <button href="" class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar burger-lines"></span>
                        <span class="navbar-toggler-bar burger-lines"></span>
                        <span class="navbar-toggler-bar burger-lines"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                        <ul class="navbar-nav ml-auto">
                            @if (Session["Username"] != null)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <span class="nc-icon nc-bullet-list-67"></span>
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                        <a class="dropdown-item" href="@Url.Action("ChangePass", "Home", new { id=@Session["Username"].ToString()})">Đổi mật khẩu</a>
                                        <a class="dropdown-item" href="@Url.Action("Details", "Home", new { id=@Session["Username"].ToString()})">Thông tin tài khoản</a>
                                        <div class="divider"></div>
                                        <a class="dropdown-item" href="@Url.Action("LogOut", "Home")">Đăng xuất</a>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <div class="fas">
                                        <a class="nav-link" href="#">
                                            <span class="no-icon">Xin chào, @Session["Username"].ToString()!</span>
                                        </a>
                                    </div>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <div class="fas">
                                        <a class="nav-link" href="@Url.Action("LoginAd", "Home")">
                                            <span class="no-icon">Đăng nhập</span>
                                        </a>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            <div class="content">
                <div class="container-fluid">
                    <div class="section">
                        @RenderBody()                     
                        @RenderSection("scripts", required: false)
                    </div>
                </div>
            </div>
            <footer class="footer">
                <div class="container-fluid">
                    <nav>
                        <p class="copyright text-center">
                            NOCTURNAL ©
                            <script>
                                document.write(new Date().getFullYear())
                            </script>
                            ALL RIGHTS RESERVED.
                        </p>
                    </nav>
                </div>
            </footer>
        </div>
    </div>
    <!--   -->
    <div class="fixed-plugin">
        <div class="dropdown show-dropdown">
            <a href="#" data-toggle="dropdown">
                <i class="fa fa-cog fa-2x"> </i>
            </a>
            <ul class="dropdown-menu">
                <li class="header-title"> Sidebar Style</li>
                <li class="adjustments-line">
                    <a href="javascript:void(0)" class="switch-trigger">
                        <p>Background Image</p>
                        <label class="switch">
                            <input type="checkbox" data-toggle="switch" checked="" data-on-color="primary" data-off-color="primary"><span class="toggle"></span>
                        </label>
                        <div class="clearfix"></div>
                    </a>
                </li>
                <li class="adjustments-line">
                    <a href="javascript:void(0)" class="switch-trigger background-color">
                        <p>Filters</p>
                        <div class="pull-right">
                            <span class="badge filter badge-black" data-color="black"></span>
                            <span class="badge filter badge-azure" data-color="azure"></span>
                            <span class="badge filter badge-green" data-color="green"></span>
                            <span class="badge filter badge-orange" data-color="orange"></span>
                            <span class="badge filter badge-red" data-color="red"></span>
                            <span class="badge filter badge-purple active" data-color="purple"></span>
                        </div>
                        <div class="clearfix"></div>
                    </a>
                </li>
                <li class="header-title">Sidebar Images</li>

                <li class="active">
                    <a class="img-holder switch-trigger" href="javascript:void(0)">
                        <img src="~/layoutadmin/assets/img/sidebar-1.jpg" alt="" />
                    </a>
                </li>
                <li>
                    <a class="img-holder switch-trigger" href="javascript:void(0)">
                        <img src="~/layoutadmin/assets/img/sidebar-3.jpg" alt="" />
                    </a>
                </li>
                <li>
                    <a class="img-holder switch-trigger" href="javascript:void(0)">
                        <img src="~/layoutadmin/assets/img/sidebar-4.jpg" alt="" />
                    </a>
                </li>
                <li>
                    <a class="img-holder switch-trigger" href="javascript:void(0)">
                        <img src="~/layoutadmin/assets/img/sidebar-5.jpg" alt="" />
                    </a>
                </li>
            </ul>
        </div>
    </div>

</body>

</html>
<!--   Core JS Files   -->
<script src="~/layoutadmin/assets/js/core/jquery.3.2.1.min.js" type="text/javascript"></script>
<script src="~/layoutadmin/assets/js/core/popper.min.js" type="text/javascript"></script>
<script src="~/layoutadmin/assets/js/core/bootstrap.min.js" type="text/javascript"></script>
<!--  Plugin for Switches, full documentation here: http://www.jque.re/plugins/version3/bootstrap.switch/ -->
<script src="~/layoutadmin/assets/js/plugins/bootstrap-switch.js"></script>
<!--  Google Maps Plugin    -->
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=YOUR_KEY_HERE"></script>
<!--  Chartist Plugin  -->
<script src="~/layoutadmin/assets/js/plugins/chartist.min.js"></script>
<!--  Notifications Plugin    -->
<script src="~/layoutadmin/assets/js/plugins/bootstrap-notify.js"></script>
<!-- Control Center for Light Bootstrap Dashboard: scripts for the example pages etc -->
<script src="~/layoutadmin/assets/js/light-bootstrap-dashboard.js?v=2.0.0 " type="text/javascript"></script>
<!-- Light Bootstrap Dashboard DEMO methods, don't include it in your project! -->
<script src="~/layoutadmin/assets/js/demo.js"></script>